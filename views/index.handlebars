<img src="/assets/img/burger2.png" alt="burger" style="width:128px;height:128px;">
<h1>Burgers!</h1>

<ul>
	{{#each burgers}}
		{{#unless this.devoured}}
			<li>
				{{this.burger_name}}
				<form action="/update/{{ this.id }}" method="post">
					<button type="submit">Devour it!</button>
				</form>
			</li>
		{{/unless}}
	{{/each}}
</ul>
<ul>
	{{#each burgers}}
		{{#if this.devoured}}
			<li>
				{{this.burger_name}}
			</li>
		{{/if}}
	{{/each}}
</ul>

<form action="/create" method="POST">
	<div class="form-group">
		<input type="text" id="burg" name="burgName">
		<button type="submit">Submit</button>
		<p>Enter a burger you want to eat.  Click the "Submit" button.</p>
	</div>
</form>